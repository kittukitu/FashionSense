 <!-- Loading Header modules from snippets -->
 <%- include('snippets/header') %>

<!-- Main Form -->
<div class="max-w-6xl p-8 mx-auto mt-12 bg-white rounded-lg shadow-lg">
    <h1 class="mb-6 text-3xl font-semibold text-pink-600">AI Fashion Avatar Generator</h1>

    <form action="/index" method="POST" class="space-y-6">
        <!-- Image Description -->
        <div>
            <label for="prompt" class="block text-lg font-medium text-gray-700">Image Description:</label>
            <input type="text" id="prompt" name="prompt" class="w-full px-4 py-2 border border-purple-400 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" required>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- CSRF Token -->

        <!-- Style Selection -->
        <div>
            <label for="style" class="block text-lg font-medium text-gray-700">Style:</label>
            <select id="style" name="style" class="w-full px-4 py-2 border border-teal-400 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" required>
                <option value="realistic">Realistic</option>
                <option value="cartoon">Cartoon</option>
                <option value="anime">Anime</option>
                <option value="sketch">Sketch</option>
            </select>
        </div>

        <!-- Resolution -->
        <div>
            <label for="resolution" class="block text-lg font-medium text-gray-700">Resolution:</label>
            <select id="resolution" name="resolution" class="w-full px-4 py-2 border border-purple-400 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                <option value="512x512">512x512</option>
                <option value="1024x1024">1024x1024</option>
                <option value="1792x1024">Wide (1792x1024)</option>
                <option value="1024x1792">Tall (1024x1792)</option>
            </select>
        </div>

        <!-- Gender Selection -->
        <div>
            <label for="gender" class="block text-lg font-medium text-gray-700">Gender:</label>
            <select id="gender" name="gender" class="w-full px-4 py-2 border border-purple-400 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <!-- Style Option -->
        <div>
            <label for="styleOption" class="block text-lg font-medium text-gray-700">Style Option:</label>
            <select id="styleOption" name="styleOption" class="w-full px-4 py-2 border border-purple-400 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" required>
                <option value="modern">Modern</option>
                <option value="classic">Classic</option>
                <option value="bohemian">Bohemian</option>
                <option value="edgy">Edgy</option>
            </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full px-6 py-3 text-white bg-pink-500 rounded-md hover:bg-gradient-to-l focus:outline-none">Generate Image</button>
    </form>
</div>

      
 <!-- Loading Footer modules from snippets -->
 <%- include('snippets/footer') %>
   

