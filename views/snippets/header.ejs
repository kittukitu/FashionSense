  <script>
    // JavaScript to improve responsiveness
    document.addEventListener("DOMContentLoaded", function () {
      const navMenu = document.getElementById("nav-menu");
      const logo = document.querySelector("h1");
  
      function adjustLayout() {
        if (window.innerWidth < 640) {
          // Mobile view: Center-align logo and menu
          logo.classList.add("text-center");
          navMenu.classList.add("text-center");
        } else {
          // Desktop view: Reset alignment
          logo.classList.remove("text-center");
          navMenu.classList.remove("text-center");
        }
      }
  
      // Adjust layout on page load and window resize
      adjustLayout();
      window.addEventListener("resize", adjustLayout);
    });
  </script>